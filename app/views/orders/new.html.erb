<h2>Registrar Pedido</h2>

<%= form_with model: @order do |f| %>
  <div>
    <%= f.label :warehouse_id %>
    <%= f.collection_select :warehouse_id, @warehouses, :id, :full_description %>
  </div>

  <div>
    <%= f.label :supplier_id %>
    <%= f.collection_select :supplier_id, @suppliers, :id, :corporate_name %>
  </div>

  <div>
    <%= f.label :estimated_delivery_date %>
    <%= f.date_field :estimated_delivery_date %>
    <% @order.errors.full_messages_for(:estimated_delivery_date).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>

  <div>
    <%= f.submit 'Registrar' %>
  </div>
<% end %>
